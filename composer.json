{
    "name": "dcousineau/phorever",
    "description": "Role-based process and daemon management for PHP",
    "keywords": ["daemon", "process"],
    "homepage": "http://dcousineau.github.com/phorever",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Cousineau",
            "email": "dcousineau@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "ext-pcntl": "*",
        "symfony/console": "2.4.*",
        "symfony/config": "2.4.*",
        "monolog/monolog": "1.7.*",
        "symfony/yaml": "2.5.*"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },
    "suggest": {
        "ext-json": "*"
    },
    "autoload": {
        "psr-0": { "Phorever": "src/" }
    },
    "bin": [
        "bin/phorever"
    ],
    "minimum-stability": "dev"
}
